<T3DataStructure>
    <sheets>

        <surveyoptions>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:rkw_survey/Resources/Private/Language/locallang_db.xlf:flexform.survey.survey_options
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.selectSurvey>
                        <label>
                            LLL:EXT:rkw_survey/Resources/Private/Language/locallang_db.xlf:flexform.survey.selectSurvey
                        </label>
                        <config>
                            <type>check</type>
                            <default>1</default>
                            <items type="array">
                                <numIndex index="0" type="array">
                                    <numIndex index="0">LLL:EXT:rkw_survey/Resources/Private/Language/locallang_db.xlf:flexform.survey.selectSurvey.description</numIndex>
                                </numIndex>
                            </items>
                        </config>
                        <onChange>reload</onChange>
                    </settings.selectSurvey>
                    <settings.selectedSurvey>
                        <TCEforms>
                            <label>
                                LLL:EXT:rkw_survey/Resources/Private/Language/locallang_db.xlf:flexform.survey.survey
                            </label>
                            <config>
                                <size>5</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <type>select</type>
                                <foreign_table>tx_rkwsurvey_domain_model_survey</foreign_table>
                                <foreign_table_where>
                                    AND tx_rkwsurvey_domain_model_survey.deleted = 0 AND tx_rkwsurvey_domain_model_survey.hidden = 0 ORDER BY tx_rkwsurvey_domain_model_survey.name
                                </foreign_table_where>
                            </config>
                            <displayCond>FIELD:settings.selectSurvey:REQ:TRUE</displayCond>
                        </TCEforms>
                    </settings.selectedSurvey>
                </el>
            </ROOT>
        </surveyoptions>

